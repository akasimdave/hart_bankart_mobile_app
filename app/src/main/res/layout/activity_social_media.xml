<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SocialMedia"
    android:orientation="vertical"
    android:background="#fdfdfd"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a medium"
        android:textColor="@color/colorPrimary"
        android:textSize="35sp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        >

        <Button
            android:onClick="facebook"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="@drawable/facebook"
            android:layout_marginRight="25dp"
            android:fontFamily="sans-serif"
            />

        <Button
            android:onClick="twitter"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="@drawable/twitter_icon_logo"
            android:layout_marginRight="25dp"
            android:fontFamily="sans-serif"
            />

        <Button
            android:onClick="whatsapp"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="@drawable/whatsapp_icon_logo"
            android:layout_marginRight="25dp"
            android:fontFamily="sans-serif"
            />

        <Button
            android:onClick="instagram"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="@drawable/instagram"
            android:fontFamily="sans-serif"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent media posts"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:fontFamily="sans-serif"
        />

    <TextView
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:background="@drawable/border"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif"
        />

    <TextView
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:background="@drawable/border"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif"
        />

    <TextView
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:background="@drawable/border"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif"
        />

</LinearLayout>