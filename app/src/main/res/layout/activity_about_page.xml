<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutPage"
    android:orientation="vertical"
    android:background="#fdfdfd"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:src="@drawable/hart_two"
        />

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Hart Banker is a business man and philanthropist who has being dedicated to helping the masses bla bla bla bla bla blabla bla blabla bla blabla bla blabla bla blabla bla blabla bla blabla bla blabla bla blabla bla blabla bla blabla bla blabla bla blabla bla blabla bla blabla bla blabla bla blabla bla blabla bla bla bla."
        android:background="@drawable/border"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/viewActivitiesButton"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="CLICK HERE TO VIEW HIS ACTIVITIES"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        />

</LinearLayout>